<div class="container">
  <div class="row justify-content-center">
    <div class="col-10 ">
      <%= render 'shared/errors', obj: @trucking_company %>
      <%= form_with(model: @trucking_company, class: "shadow p-3 mb-3 bg-info rounded", local: true)  do |f| %>

      <div class="form-group row">
        <%= f.label :code, class: "col-2 col-form-label text-light" %>
        <div class="col-10">
          <%= f.text_field :code, class: "form-control shadow rounded", placeholder: "Code" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :name, class: "col-2 col-form-label text-light" %>
        <div class="col-10">
          <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Name" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :scac_code, class: "col-2 col-form-label text-light" %>
        <div class="col-10">
          <%= f.text_field :scac_code, class: "form-control shadow rounded", placeholder: "SCAC Code" %>
        </div>
      </div>


      <div class="form-group row justify-content-center">
        <%= f.submit class: "btn btn-outline-light btn-lg" %>
      </div>

      <% end %>
    </div>

    <div class="mb-3 col-10 form-group row justify-content-center">
      <%= link_to '[ Cancel and Return To Articles ]', trucking_companies_path, class: "text-info"%>
    </div>

  </div>
</div>
